	year = {2022},
	keywords = {Speech segmentation, ELF, L2, Inter-rater reliability, Chunking, Internal validity, Linear unit grammar, Speech comprehension},
	pages = {100012},
	file = {Vetchinnikova et al. - 2022 - Perceptual chunking of spontaneous speech Validat.pdf:files/6937/Vetchinnikova et al. - 2022 - Perceptual chunking of spontaneous speech Validat.pdf:application/pdf},
