	author = {Mauranen, Anna and Vetchinnikova, Svetlana},
	editor = {Mauranen, Anna and Vetchinnikova, Svetlana},
	year = {2020},
	doi = {10.1017/9781108675000.002},
	keywords = {multilingualism, contact, heterogeneity of social contacts, internal dynamics, migration, mobility, standardness, synchronic variation},
	pages = {1--10},
	file = {mauranen_vetchinnikova_2020_introduction_-_dynamics_of_change_from_different_perspectives_and_on_different.pdf:files/9527/mauranen_vetchinnikova_2020_introduction_-_dynamics_of_change_from_different_perspectives_and_on_different.pdf:application/pdf},
